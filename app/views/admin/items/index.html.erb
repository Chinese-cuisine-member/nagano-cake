<div class="container-fluid py-5">
  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="pb-5">商品一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th colspan="2">商品名</th>
            <th></th>
            <th>税抜価格</th>
            <th colspan="2">ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.name %>
              </td>
              <td colspan="2">
                <%= link_to item.name, item_path(item.id), class: "text-dark" %>
              </td>
              <td></td>
              <td>
                <%= item.price %>
              </td>
              <td colspan="2">
                <%= item.genre.name %>
              </td>
              <td></td>
              <td>
                <% if item.is_active = "true" %>
                  <p class="font-weight-bold text-info mb-0">販売中</p>
                <% else %>
                  <p class="font-weight-bold text-danger mb-0">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
