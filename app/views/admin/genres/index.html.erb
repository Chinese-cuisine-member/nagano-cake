<div>
  <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
    <div class="field">
      <label for="name">ジャンル名</label>
      <%= f.text_field :name %>
    </div>
    <%= f.submit ' 新規登録 ' %>
  <% end %>
</div>
<table>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>