<div class="container my-5">
  <h2 class="pb-5">ジャンル一覧・追加</h2>
  <div>
    <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
      <label for="name" class="mr-3">ジャンル名</label>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-3" %>
      <%= f.submit ' 新規登録 ', class: "btn btn-success mr-3" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-5">
      <table class="table my-5">
        <thead class="thead-light">
          <tr>
            <th colspan="2" class="text-center">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td class="text-right">
              <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>