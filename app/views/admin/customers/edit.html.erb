<div class="container-fluid py-5">
  <div class="row">
    <div class="col-6 offset-3">
    <h2 class="pb-5">新規会員登録</h2>
    <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
        <tbody>
          <%= form_with model: @customer, url: admin_customer_path(customer), class: 'new_customer', local: true do |f| %>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
            <td></td>
          </tr>
          <tr>
            <td>名前</td>
            <td><%= f.text_field :last_name, autofocus: true, class: "last_name" %></td>
            <td><br><%= f.text_field :first_name, class: "first_name" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)<br><%= f.text_field :last_name_kana, class: "last_name_kana" %></td>
            <td>(メイ)<br><%= f.text_field :first_name_kana, class: "first_name_kana" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :zipcode, class: "zipcode" %></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2"><%= f.text_field :address, class: "address" %></td>
          </tr>
          <tr>
            <td>電話番号<br>(ハイフンなし)</td>
            <td><%= f.text_field :phone_number, class: "phone_number" %></td>
            <td></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
            <td></td>
          </tr>
         <tr>
           <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, "true" %>
                <%= f.label :is_activ, "販売中" %>
              </td>
              <td>
                <%= f.radio_button :is_active, "false" %>
                <%= f.label :is_activ, "販売停止中" %>
              </td>
         </tr>
          <tr>
            <td colspan="3">
              <div class="actions text-center">
              <%= f.submit "変更を保存", class: "btn btn-info px-5 my-3" %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>