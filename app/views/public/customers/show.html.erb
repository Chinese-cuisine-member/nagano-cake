<div class="container-fluid py-5">
  <h3 class="pl-5 pb-5">マイページ</h3>
  <div class="row">
    <div class="col-6 offset-1">
      <table class="table-height mb-3">
        <tbody>
          <tr>
            <td class="font-weight-bold">登録情報</td>
            <td><%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-success px-5 ml-4"%></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-bordered" style="width: 100%;">
        <tbody>
          <tr>
            <td class="my-2 bg-light" style="width: 150px;">氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name%></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.zipcode %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <table class="table-height mt-3">
        <tbody>
          <tr>
            <td class="font-weight-bold">配送先</td>
            <td><%= link_to '一覧を見る', ships_path, class: "btn btn-info px-5 ml-4"%></td>
          </tr>
          <tr>
            <td class="font-weight-bold">注文履歴</td>
            <td><%= link_to '一覧を見る', orders_path, class: "btn btn-info px-5 ml-4"%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
