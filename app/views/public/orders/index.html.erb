<h3>注文履歴一覧</h3>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th colspan="4">配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td colspan="4"><%= order.address %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>