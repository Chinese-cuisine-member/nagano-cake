<div class="container-fluid py-5">
  <div class="col-10 offset-1">
    <h3>注文履歴一覧</h3>
      <table class="table table-bordered my-4">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th colspan="4">配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td colspan="4"><%= order.address %></td>
            <td><%= order.order_details.item.name %></td>
            <td><%= order.payment %></td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_detail_path(order), class: "btn btn-info" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>