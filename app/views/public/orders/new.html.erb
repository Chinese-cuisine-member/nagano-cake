<div class="row">
  <div class="col">
    <h3>注文情報入力</h3>
    <h3>支払方法</h3>
      <%= form_with model: @order, url: orders_path(@order), class: '', local: true do |f| %>
      <div class="payment_method">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, "クレジットカード" %>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>
      <div class="ships">
        <%= f.radio_button :address_button, "my_address" %>
        <%= f.label :address_button, "ご自身の住所" %>
        <%= f.label :address, "ご自身の住所" %>
        <%= current_customer.address %>

        <%= f.radio_button :address_button, "saved_address" %>
        <%= f.label :address_button, "登録済住所から選択" %>
        <%= f.radio_button :address_button, "new_address" %>
        <%= f.select :ship, options_from_collection_for_select(current_customer.ships.all, :id, :full_address) %>

        <%= f.label :address_button, "新しいお届け先" %>
        <%= f.label :zipcode, "郵便番号" %>
        <%= f.text_field :zipcode %>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
      <div class="submit">
        <%= f.submit "確認画面へ進む" %>
      </div>
      <% end %>
  </div>
</div>