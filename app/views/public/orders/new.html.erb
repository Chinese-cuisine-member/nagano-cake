<div class="container-fulid py-5">
  <div class="col-10 offset-1">
    <h3>注文情報入力</h3>
    <%= form_with model: @order, url: orders_confirm_path, class: '', local: true do |f| %>
      <div class="payment mt-3">
        <h5 class="font-weight-bold">支払方法</h5>
        <div class="payment_method ml-5">
          <%= f.radio_button :payment_method, 0 %>
          <%= f.label :payment_method, "クレジットカード" %><br>
          <%= f.radio_button :payment_method, 1 %>
          <%= f.label :payment_method, "銀行振込" %>
        </div>
      </div>
      <div class="ships mt-3">
        <h5 class="font-weight-bold mt-3">お届け先</h5>
        <div class="ml-5">
          <div class="pb-3">
            <%= f.radio_button :address_button, "my_address" %>
            <%= f.label :address_button, "ご自身の住所" %>
            <p class="ml-3"><%= current_customer.address %></p>
          </div>
          <div class="pb-3">
            <%= f.radio_button :address_button, "saved_address" %>
            <%= f.label :address_button, "登録済住所から選択" %>
            <div class="ml-3">
              <% if current_customer.ships.present? %>
                <%= f.select :ship_id, options_from_collection_for_select(current_customer.ships.all, :id, :full_address), class: "ml-3" %>
              <% else %>
                <p>登録されているお届け先がありません。</p>
              <% end %>
            </div>
          </div>
          <div class="pb-3">
            <%= f.radio_button :address_button, "new_address" %>
            <%= f.label :address_button, "新しいお届け先" %>
            <table class="ml-3" style="width: 100%">
              <tbody>
                <tr>
                  <td><%= f.label :zipcode, "郵便番号" %></td>
                  <td><%= f.text_field :zipcode, placeholder: "0000000", size: "20" %></td>
                </tr>
                <tr>
                  <td><%= f.label :address, "住所" %></td>
                  <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: "50" %></td>
                </tr>
                <tr>
                  <td><%= f.label :name, "宛名" %></td>
                  <td><%= f.text_field :name, placeholder: "令和道子", size: "20" %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="submit text-center mt-3">
        <%= f.submit "確認画面へ進む", class: "btn btn-info px-4" %>
      </div>
    <% end %>
  </div>
</div>