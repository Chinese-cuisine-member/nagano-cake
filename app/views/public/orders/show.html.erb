<div class="container-fluid py-5">
  <div class="col-10 offset-1">
    <h3>注文履歴詳細</h3>
    <div class="row">
      <div class="col-6 pl-0 mt-3">
        <h5 class="font-weight-bold">注文情報</h5>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">注文日</td>
            <td colspan="4"><%= l @order.created_at %></td>
          </tr>
          <tr>
            <td class="bg-light">配送先</td>
            <td colspan="4">
              <%= @order.zipcode %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">支払方法</td>
            <td colspan="4"><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td colspan="4"><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
      <div class="col-6 mt-3">
      <h5 class="font-weight-bold">請求情報</h5>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= @total_payment %></td>
          </tr>
          <tr>
            <td class="bg-light">配送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td class="bg-light">ご請求額</td>
            <td><%= @amount_billed %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row mt-3">
    <h5 class="font-weight-bold">注文内容</h5>
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th colspan="6">商品</th>
          <th colspan="2">単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td colspan="6"><%= order_detail.item.name %></td>
          <td colspan="2"><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item.with_tax_price * order_detail.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
