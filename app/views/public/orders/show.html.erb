<h3>注文履歴詳細</h3>
<div class="row">
  <div class="col">
    <h5>注文情報</h5>
    <table>
      <tr>
        <td>注文日</td>
        <td colspan="4"><%= l @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td colspan="4">
          <%= @order.zipcode %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td colspan="4"><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td colspan="4"><%= @order.status_i18n %></td>
      </tr>
    </table>
  </div>
  <div class="col">
  <h5>請求情報</h5>
    <table>
      <tr>
        <td>商品合計</td>
        <td><%= @total_payment %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <td>ご請求額</td>
        <td><%= @amount_billed %></td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
<h5>注文内容</h5>
  <thead>
    <tr>
      <th colspan="6">商品</th>
      <th colspan="2">単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <table>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td colspan="6"><%= order_detail.item.name %></td>
      <td colspan="2"><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.item.with_tax_price * order_detail.quantity %></td>
    </tr>
    <% end %>
  </table>
</div>