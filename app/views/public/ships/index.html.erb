<div class="row">
  <div class="col">
    <h3>配送先登録/一覧</h3>
    <table>
      <%= form_with model:@ship, url:ships_path, local:true do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :zipcode, autofocus: true, class: "" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, class: "" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, class: "" %></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% if @ships.present? %>
  <div class="">
    <table>
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @ships.each do |ship| %>
        <tr>
          <td><%= ship.zipcode %></td>
          <td><%= ship.address %></td>
          <td><%= ship.name %></td>
          <td>
            <%= link_to "編集", edit_ship_path(ship) %><%= link_to "削除する", ship_path(ship), method: :delete %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p>まだ配送先はありません</p>
    <% end %>
  </div>
</div>