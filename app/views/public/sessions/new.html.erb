<div class="container-fluid py-5">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="pb-5">ログイン</h2>

      <p>会員の方はこちらからログイン</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "foem-group") do |f| %>
        <div class="field py-3">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "sample@example.com", class: "form-control" %>
        </div>

        <div class="field py-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field py-3 text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "Log in", class: "btn btn-secondary px-5 mb-3"%>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
