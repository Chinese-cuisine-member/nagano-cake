<div class='container my-3'>
  <div class="row">
    <div class='col-md-5 offset-1 mt-5'>
      <%= attachment_image_tag @item, :image, :fill, 300, 270, fallback: "nophoto_thumbnail.png", size: "300x270" %>
    </div>
    <div class="col-md-6 mt-5">
      <table class="table-height">
        <tbody>
          <tr>
            <td class="font-weight-bold h4">
              <%= @item.name %>
            </td>
          </tr>
          <tr>
            <td>
              <%= @item.explanation %>
            </td>
          </tr>
            <td class="font-weight-bold">
              ¥<%= (@item.price * 1.1).floor %>(税込)
            </td>
          </tr>
          <tr>
            <td>
              <div>
                <%= form_with model:@carts_item, url:carts_items_path, local:true do |f| %>
                  <%= f.hidden_field :item_id, value: @item.id %>
                  <%= f.select :quantity, options_for_select(((1..10).to_a)), include_blank: "個数選択" %><br>
                  <%= f.submit "カートに入れる", class: "btn btn-info mt-5 ml-5" %>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>