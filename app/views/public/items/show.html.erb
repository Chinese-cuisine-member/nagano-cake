<div class='container my-3'>
  <div class='row'>
    <div class='col-md-2'>
      <table class="table text-center mt-5">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr><td class="pt-3"><%= genre.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-4 offset-1 mt-5'>
        <%= attachment_image_tag @item, :image, :fill, 250, 220,fallback: "nophoto_thumbnail.png", size: "250x220" %>
    </div>
    <div class="col-md-5 mt-5">
      <table class="table-height">
        <tbody>
          <tr>
            <td class="font-weight-bold">
              <%= @item.name %>
            </td>
          </tr>
          <tr>
            <td>
              <%= @item.explanation %>
            </td>
          </tr>
            <td class="font-weight-bold">
              ¥<%= (@item.price * 1.1).floor %>(税込)
            </td>
          </tr>
          <tr>
            <td class="form-group">
              <%= form_with model:@carts_item, url:carts_items_path, local:true do |f| %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.select :quantity, options_for_select(((1..10).to_a)), include_blank: "個数選択" %>
                <%= f.submit "カートに入れる", class: "btn btn-info ml-5" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>