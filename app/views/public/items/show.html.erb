<div class='container my-3'>
  <div class='row'>
    <div class='col-md-2'>
      <table class="table text-center mt-5">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr><td class="pt-3"><%= genre.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-10'>
      <div>
        <%= attachment_image_tag @item, :image, :fill, 150, 120, fallback: "no_image.jpg", class:""; %>
        <%= @item.name %>
        <%= @item.explanation %>
        ¥<%= @item.price %>(税込)
        <div class="form-group">
          <%= form_with model:@carts_item, url:carts_items_path, local:true do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :quantity, options_for_select(((1..10).to_a)), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>