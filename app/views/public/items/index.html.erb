<div class='container my-3'>
  <div class='row'>
    <div class='col-md-2'>
      <table class="table text-center mt-5">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr><td class="pt-3"><%= genre.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-10'>
      <div>
        <h4>商品一覧</h4>
        <div class='row new-items'>
          <% @items.each do |item| %>
          <div class="col-md-3">
            <%= attachment_image_tag item, :image, :fill, 150, 120, fallback: "no_image.jpg", class:""; %>
            <p><%= item.name %><br>¥<%= item.price %></p>
          </div>
          <% end %>
        </div>
      </div>
    <div>
  </div>
</div>