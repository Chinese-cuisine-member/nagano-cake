<div class='container my-3'>
  <div class='col-12 py-5'>
    <h4>商品一覧</h4>
    <div class='row new-items py-3'>
      <% @items.each do |item| %>
      <div class="col-md-3 mb-2">
        <div class="card" style="width: 15rem;">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, fallback: "nophoto_thumbnail.png", size: "170x150", class: "card-img-top p-2", size: "220x200" %>
          <% end %>
          <div class="cardbody px-2 py-4">
            <h5 class="card-title"><%= link_to item.name, item_path(item.id),  class: "font-weight-bold text-dark" %></h5>
            <p class="card-text">¥<%= item.price %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate @items %>
  <div>
</div>