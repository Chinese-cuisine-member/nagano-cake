<div class='container my-3'>
  <div class='row'>
    <div class='col-md-2'>
      <table class="table text-center mt-5">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr><td class="pt-3"><%= genre.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-9 offset-md-1'>
      <div>
        <h4>商品一覧</h4>
        <div class='row new-items'>
          <% @items.each do |item| %>
          <div class="col-md-3 mb-2">
            <%= attachment_image_tag item, :image, fallback: "nophoto_thumbnail.png", size: "170x150", class: "m-2" %>
            <p><%= link_to item.name, item_path(item.id),  class: "font-weight-bold text-dark" %><br>
            ¥<%= item.price %></p>
          </div>
          <% end %>
        </div>
        <%= paginate @items %>
      </div>
    <div>
  </div>
</div>