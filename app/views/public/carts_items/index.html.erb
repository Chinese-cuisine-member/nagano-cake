
<div class="container-fluid py-5">
  <div class="col-8 offset-2">
    <h3>ショッピングカート</h3>
      <% if @carts_items.present? %>
      <div class="text-right">
        <%= button_to "カートを空にする", carts_items_destroy_all_path, class:"btn btn-outline-danger btn-sm", method: :delete %>
      </div>
      <% end %>
      <table class="table my-3">
        <thead class="bg-light">
          <tr>
            <th colspan="3">商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% if @carts_items.present? %>
          <% @carts_items.each do |carts_item| %>
            <tr>
              <td colspan="3" class="font-weight-bold">
                <%= attachment_image_tag carts_item.item, :image, :fill, 80, 50, fallback: "nophoto_thumbnail.png", size: "80x50", class: "m-2" %>
                <%= carts_item.item.name %>
              </td>
              <td>
                <%=carts_item.item.with_tax_price %>
              </td>
              <td>
                <%= form_with model:carts_item, url:carts_item_path(carts_item.id), method: :patch, local:true do |f| %>
                  <%= f.select :quantity, *[1..24], :selected=>carts_item.quantity.to_i%>
                  <%= f.submit "変更", class: "btn btn-outline-secondary btn-sm" %>
            　　<% end %>
            　</td>
              <td>
                <%= carts_item.subtotal %>
              </td>
              <td><%= link_to "削除する", carts_item_path(carts_item.id), method: :delete, class:"btn btn-outline-danger btn-sm" %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3">まだ、カートに商品はありません。</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-outline-secondary" %>
      <div class="row justify-content-end">
        <div class="co-5">
          <table class="table table-bordered text-left" style="width: 300px;">
            <tr>
              <td class="bg-light">合計金額</td>
              <td><%= @total_price %></td>
            </tr>
          </table>

        </div>
      </div>
        <% if @carts_items.present? %>
        <div class="text-center">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-info px-5" %>
        </div>
        <% end %>
      </div>
  </div>
</div>