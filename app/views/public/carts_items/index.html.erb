<h2>ショッピングカート</h2>
<div class="row">
  <div class="col">
    <% if @carts_items.present? %>
    <div>
      <%= link_to "カートをからにする", cart_items_destroy_all_path, method: :delete %>
    </div>
    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th colspan="3">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% if @carts_items.present? %>
        <% @carts_items.each do |carts_item| %>
          <tr>
            <td colspan="3">
              <%= carts_item.item.name %>
              <%= attachment_image_tag carts_item.item, :image, :fill, 30, 20, fallback: "cake.jpg", class:""; %>
            </td>
            <td></td>
            <td>
              <%= form_with model:carts_item, url:carts_item_path(carts_item.id), method: :patch, local:true do |f| %>
                <%= f.hidden_field :item_id, value :item.id %>
                <%= f.select :quantity, options_for_select(((1..10).to_a)) %>
                <%= f.submit "変更" %>
          　　<% end %>
          　</td>
            <td></td>
            <td><%= link_to "削除する", carts_items_path(carts_item.id), method: :delete %></td>
          </tr>
        <% end %>
      <% else %>
          <tr>
            <td colspan="3">まだ、カートに商品はありません。</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <div>
      <table>
        <tr>
          <td>合計金額</td>
          <td><=></td>
        </tr>
      </table>
    </div>

    <div>
      <%= link_to "買い物を続ける", items_path %>
    </div>

    <% if @carts_items.present? %>
    <div>
      <%= link_to "情報入力に進む", new_order_path %>
    </div>
    <% end %>
  </div>
</div>